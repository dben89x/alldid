#cms
	.container
		.form.user-form.light-form
			%h3
				Edit password

			= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
				= devise_error_messages!
				.col-md-12
					.user-field
						.fa-icon
							%i.fa.fa-user

						= f.email_field :email, autofocus: true, placeholder: "Email", class: 'user-input light-input input email'

				.col-md-12
					.user-field
						.fa-icon
							%i.fa.fa-lock
						= f.password_field :password, autocomplete: "off", placeholder: "New Password", class: 'user-input light-input input password'

				.col-md-12
					.user-field
						.fa-icon
							%i.fa.fa-lock
						= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation", class: 'user-input light-input input password'

				.col-md-12
					.user-field
						.fa-icon
							%i.fa.fa-lock
						= f.password_field :current_password, autocomplete: "off", placeholder: "Current Password", class: 'user-input light-input input password'

				%br
					= f.submit "Update", class: 'brand-btn light-brand-btn med-btn'

			-if resource.org_owner?
				%h3 Cancel your barbershop subscription
				%p
					Unhappy?
					= button_to "Cancel my subscription", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'red-btn med-btn'
				= link_to "Back", :back
