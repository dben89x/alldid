#users
	.container
		.form.user-form
			%h3 Sign up
			= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|

				= devise_error_messages!

				.col-md-12
					.user-field
						.fa-icon
							%i.fa.fa-user
						= f.email_field :email, autofocus: true, placeholder: "Email", class: 'user-input email'
				.col-md-12
					.user-field
						.fa-icon
							%i.fa.fa-lock
						= f.password_field :password, autocomplete: "off", placeholder: "Password (#{@minimum_password_length} character minimum)", class: 'user-input password'
				.col-md-12
					.user-field
						.fa-icon
							%i.fa.fa-lock
						= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation", class: 'user-input password'
				%br
				= f.submit "Create Account", class: 'brand-btn med-btn'
			= render "devise/shared/links"
