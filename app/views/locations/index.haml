#cms
	.container
		%h1 Locations
		= link_to 'New Location', new_location_path
		.locations
			%h3 Locations:
			- @locations.each do |location|
				= link_to edit_location_path(location) do
					.fa.fa-pencil.edit
				%span.location=location.name
				= link_to location, method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete-location' do
					%span.fa.fa-times.delete
				%br
