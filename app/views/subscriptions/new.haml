.container
	%h1 Choose your plan
	.plans
		-@plans.each do |plan|
			.col-md-4
				=form_tag subscriptions_path do
					=hidden_field_tag 'stripe_price', plan[:stripe_price]
					=hidden_field_tag 'description', "Subscription to #{plan[:name].capitalize} plan"
					.plan
						%article
							- if flash[:error].present?
								#error_explanation
									%p= flash[:error]
						.price
							%span.number
								="$#{plan[:price]}"
							%span.term
								="/ year"

						.name
							=plan[:name].upcase
						-# =link_to new_user_registration_path(plan: plan[:name]), class: 'free-trial-btn large-btn' do
						-# 	Start your free trial

						%script.stripe-button{"data-amount" => "#{plan[:stripe_price]}",
							"data-description" => "#{plan[:name].capitalize} plan",
							"data-key" => "#{Rails.configuration.stripe[:publishable_key]}",
							"data-locale" => "auto",
							src: "https://checkout.stripe.com/checkout.js"}

						.features
							Features:
							%hr
							-plan[:features].each do |feature|
								%span.fa.fa-check-square-o
								%span.feature=feature
								%br
